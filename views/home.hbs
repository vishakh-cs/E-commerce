    </div>


  <!-- Banner Carousel -->
<section class="bg-gray-200 py-8 xl:py-12">
    <div class="container mx-auto">
        <!-- Carousel code goes here -->
        <div class="swiper-container-wrapper">
            <div class="swiper-container">
                <div class="swiper-wrapper">
                    {{#each showBanner}}
                    <div class="swiper-slide">
                        <img src="{{this.imageUrl}}" alt="{{this.name}}" class="w-full">
                    </div>
                    {{/each}}
                </div>
                <!-- Add navigation buttons for Swiper -->
                <div class="swiper-button-next"></div>
                <div class="swiper-button-prev"></div>
            </div>
        </div>
    </div>
</section>



    <!-- Product List -->
    <h1 class="text-3xl font-semibold mt-8 text-center">Product List</h1>
    <div class="flex flex-wrap -mx-2 justify-evenly">
        {{#each products}}
        <div
            class="swiper-slide relative m-2 md:m-4 lg:m-10 flex w-full h-auto max-w-xs flex-col overflow-hidden rounded-lg border border-gray-100 bg-white shadow-md">
            <div
                class="relative mx-2 mt-2 md:mx-3 md:mt-3 lg:mx-4 lg:mt-4 h-36 sm:h-48 md:h-52 lg:h-60 overflow-hidden rounded-xl flex flex-col justify-between">
                <a href="/products/{{_id}}">
                    {{#if quantity}}
                    {{#each this.images}}
                    <img id="image" class="object-contain object-center w-full h-full" src="/uploads/{{this}}"
                        alt="{{../name}}" />
                    {{/each}}
                    {{else}}
                    <img src="/images/out-of-stock.png" alt="Out of Stock" class="w-full h-full">
                    <div class="absolute inset-0 bg-black bg-opacity-50 flex items-center justify-center opacity-100">
                        <p class="text-white font-semibold text-lg">Out of Stock</p>
                    </div>
                    {{/if}}
                    <div
                        class="absolute inset-0 flex items-center justify-center bg-black bg-opacity-50 opacity-0 hover:opacity-100 transition duration-300 ease-in-out">
                        <a href="/products/{{_id}}"
                            class="text-white font-semibold px-4 py-2 bg-indigo-500 hover:bg-indigo-700 transition duration-300 ease-in-out focus:outline-none focus:ring focus:ring-indigo-200 focus:ring-opacity-50">View
                            Product Details</a>
                    </div>
                </a>
            </div>
            <div class="mt-2 md:mt-4 px-2 md:px-5 pb-2 md:pb-5">
                <a href="#">
                    <h5 class="sm:text-lg md:text-xl lg:text-2xl tracking-tight text-slate-900">
                        {{name}}
                    </h5>
                </a>
                <div class="mt-1 md:mt-2 mb-3 md:mb-5 flex items-center justify-between">
<p class="text-2xl text-orange-500 font-bold mb-4">
  {{#if offerPrice}}
    <span class="text-gray-500 line-through">Rs.{{price}}</span> <span class="sm:text-lg md:text-xl lg:text-2xl font-bold text-slate-900">Rs.{{offerPrice}}</span>
  {{else}}
    <span class="sm:text-lg md:text-xl lg:text-2xl font-bold text-slate-900">Rs.{{price}}</span>
  {{/if}}
</p>

                    <div class="flex items-center space-x-1 md:space-x-2">
                        <span
                            class="mr-2 ml-3 rounded bg-yellow-200 px-1 sm:px-2 md:px-3 lg:px-4 text-xs sm:text-sm md:lg:text-lg font-semibold">{{rating}}</span>
                    </div>
                </div>

                <div class="flex flex-col gap-3">
                    {{#if quantity}}
                    <a href="/wishlistadd/{{_id}}"
                        class="flex items-center justify-center w-full bg-gray-900 px-2 py-1 text-sm text-white transition hover:bg-gray-700 rounded-md">
