</footer>



            <script>
  // Check if the URL has a query parameter 'notEnoughQuantity' with the value 'true'
  const urlParams = new URLSearchParams(window.location.search);
  if (urlParams.get('notEnoughQuantity') === 'true') {
    // Display the SweetAlert2 popup
    Swal.fire({
      icon: 'error', 
      title: 'Product out of Stock',
      text: 'Sorry, there is not enough quantity available for this product.',
      confirmButtonColor: '#3085d6',
      confirmButtonText: 'OK',
    });
  }
</script>

    <!-- Include Swiper JS for the carousel -->
    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
    <!-- Initialize the carousel with autoplay -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var swiper = new Swiper('.swiper-container', {
                slidesPerView: 1,
                spaceBetween: 10,
                navigation: {
                    nextEl: '.swiper-button-next',
                    prevEl: '.swiper-button-prev',
                },
                loop: true, // Enable looping
                autoplay: {
                    delay: 2000, // Set the delay between slides (in milliseconds)
                    disableOnInteraction: false, // Allow manual navigation to stop autoplay
                },
            });
        });
    </script>
