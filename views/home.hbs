    <!-- Search Bar -->
    <div class="bg-gray-100 py-7 shadow-md">
        <div class="container mx-auto">
            <form action="/searchprdt" method="post" class="flex items-center justify-center">
                <input type="text" name="searchQuery" placeholder="Search for products..."
