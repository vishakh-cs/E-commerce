<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.15/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gradient-to-r from-indigo-500 via-purple-600 to-pink-500 flex justify-center items-center h-screen">
    <div class="bg-white shadow-lg p-8 rounded-lg w-96">
        <h1 class="text-3xl font-semibold mb-6 text-center text-indigo-600">Forgot Password</h1>
        <p class="text-gray-600 text-center mb-6">Enter your email address to receive a verification code:</p>
        <form id="otpForm" class="space-y-4">
            <div class="flex flex-wrap justify-between items-center mb-4">
                <div class="w-full md:w-3/4">
                    <label for="email" class="block text-sm font-medium text-gray-700">Email Address</label>
                    <input type="email" id="email" name="email" class="mt-1 block w-full h-12 border border-gray-300 rounded-md shadow-sm">
                </div>
                <div class="w-full md:w-1/4 mt-4 md:mt-0">
                    <button type="submit" class="w-full h-10 mt-5 ml-3 font-bold">Send OTP</button>
                </div>
            </div>

            <div class="mb-4 flex justify-between space-x-4">
                <input type="text" id="otp-1" name="otp-1" class="w-1/4 h-12 border border-gray-300 rounded-md shadow-sm text-center" maxlength="1">
                
                <input type="text" id="otp-2" name="otp-2" class="w-1/4 h-12 border border-gray-300 rounded-md shadow-sm text-center" maxlength="1">
                
                <input type="text" id="otp-3" name="otp-3" class="w-1/4 h-12 border border-gray-300 rounded-md shadow-sm text-center" maxlength="1">
                
                <input type="text" id="otp-4" name="otp-4" class="w-1/4 h-12 border border-gray-300 rounded-md shadow-sm text-center" maxlength="1">
            </div>
            <div class="flex items-center justify-between">
                <button type="submit" class="px-4 py-2 bg-indigo-600 border border-transparent rounded-md text-white">Submit</button>
                <a href="#" id="resendLink" class="text-sm text-indigo-600 hover:text-indigo-800">Resend OTP</a>
            </div>
        </form>
        <div id="otpMessage" class="text-center text-sm text-indigo-600 mt-2"></div>
    </div>
    <script>
        // Function to show the OTP message
        function showOtpMessage(message) {
            const otpMessage = document.getElementById("otpMessage");
            otpMessage.textContent = message;
            otpMessage.style.display = "block";
        }

        // Function to hide the OTP message
        function hideOtpMessage() {
            const otpMessage = document.getElementById("otpMessage");
            otpMessage.style.display = "none";
        }

        // Add an event listener to the "Resend OTP" link
        const resendLink = document.getElementById("resendLink");

        resendLink.addEventListener("click", function (e) {
            e.preventDefault();
            // Show the message
            showOtpMessage("OTP has been resent - check your email and enter OTP.");
            // You can trigger the OTP resend process here
        });

        // Add an event listener to the form submission
        const otpForm = document.getElementById("otpForm");

        otpForm.addEventListener("submit", function (e) {
            e.preventDefault();
            // Hide the message
            hideOtpMessage();
            // Process the form submission, e.g., validate OTP
        });
    </script>
</body>
</html>
